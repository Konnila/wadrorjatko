<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>Has made <%= @user.ratings.size %> ratings, average <%= @user.average_rating unless @user.ratings.empty?%></p>

<ul>
  <%@user.ratings.each do |rating| %>
    <li><%= rating.beer.name %> <%= rating.score %> <%= link_to 'delete', rating, method: :delete %> </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
